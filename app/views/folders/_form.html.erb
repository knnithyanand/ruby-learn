<%= simple_form_for @folder, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :photo %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 4 } %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('.cancel', :default => raw(t("helpers.links.cancel")))),
                folders_path, :class => 'btn' %>
  </div>
<% end %>
