<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= render :inline => @post.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw(t('views.back.both',
                    :default => t("helpers.links.back"))),
              posts_path, :class => 'btn'  %>
  <%= link_to raw(t('views.edit.both',
                    :default => t("helpers.links.edit"))),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to raw(t('views.destroy.both', 
                    :default => t("helpers.links.destroy"))),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('views.confirm', 
                                        :default => t("helpers.links.confirm",
                                        :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
