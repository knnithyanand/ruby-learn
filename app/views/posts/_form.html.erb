<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini'} } %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <p class="panel-title">Attachments</p>
    </div>
    <div class="panel-body">
      <div class="list-group">
        <% @post.attachments.each do |attachment| %>
          <div class="list-group-item">
            <strong class="list-group-item-heading"><%= link_to attachment.filename, attachment.file.url %></strong>
            <p class="list-group-item-text"><%= attachment.updated %> by <%= link_to "Nithyanand K N", "#" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('views.cancel.both',
                :default => t("helpers.links.cancel"))),
                posts_path,
                :class => 'btn' %>
  </div>
<% end %>
