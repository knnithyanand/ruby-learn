<%- model_class = Profile -%>
<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:profile_picture) %>:</strong></dt>
  <dd><%= image_tag @profile.photo.url(:thumb), class: "img-responsive img-rounded" %></dd>
  <dt><strong>Name:</strong></dt>
  <dd><%= @profile.first_name %> <%= @profile.middle_name %> <%= @profile.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
  <dd><%= @profile.nickname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @profile.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @profile.date_of_birth %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw(t('.back', :default => raw(t("helpers.links.back")))),
              profiles_path, :class => 'btn'  %>
  <%= link_to raw(t('.edit', :default => raw(t("helpers.links.edit")))),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to raw(t('.destroy', :default => raw(t("helpers.links.destroy")))),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
