<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :image %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :current_password %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: false  %>

  <div class="form-actions">
    <%= f.button :submit, raw(t('.save', :default => raw(t("helpers.buttons.save")))), :class => 'btn-primary' %>
    <%= link_to raw(t('.cancel', :default => raw(t("helpers.links.cancel")))),
                :back, :class => 'btn' %>
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger pull-right' %>
  </div>
<% end %>
