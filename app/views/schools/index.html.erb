<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="list-group">
  <div class="list-group-item">
    <%= link_to raw(t('.new', :default => raw(t("helpers.links.new")))),
                new_school_path,
                :class => 'btn btn-primary' %>
  </div>
  <% @schools.each do |school| %>
    <a href="<%= school_path(school) %>" class="list-group-item">
      <strong class="list-group-item-heading"><%= school.name %></strong>
      <p class="list-group-item-text"><%= school.city %>, <%= school.country %></p>
    </a>
  <% end %>
</div>
