<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @course.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @course.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @course.type %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw(t('.back', :default => raw(t("helpers.links.back")))),
              courses_path, :class => 'btn'  %>
  <%= link_to raw(t('.edit', :default => raw(t("helpers.links.edit")))),
              edit_course_path(@course), :class => 'btn' %>
  <%= link_to raw(t('.destroy', :default => raw(t("helpers.links.destroy")))),
              course_path(@course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
