<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :roles, as: :check_boxes, collection: %i[ guest student teacher administrator ] %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('.cancel', :default => raw(t("helpers.links.cancel")))),
                users_path, :class => 'btn' %>
  </div>
<% end %>
