<%= simple_form_for @file_item,
                    :url => folder_file_items_path(params[:folder_id]),
                    :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :file, :input_html => { :multiple => true, :name => "file_item[file]" } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('views.cancel.both',
                      :default => t("helpers.links.cancel"))),
                folder_file_items_path(params[:folder_id]),
                :class => 'btn' %>
  </div>
<% end %>
