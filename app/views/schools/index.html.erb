<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:building) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:locality) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.id, school_path(school) %></td>
        <td><%= school.name %></td>
        <td><%= school.building %></td>
        <td><%= school.street %></td>
        <td><%= school.locality %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.country %></td>
        <td><%= school.postcode %></td>
        <td><%= school.phone %></td>
        <td><%= school.fax %></td>
        <td><%= school.email %></td>
        <td><%= school.notes %></td>
        <td><%=l school.created_at %></td>
        <td>
          <%= link_to raw(t('.edit', :default => raw(t("helpers.links.edit")))),
                      edit_school_path(school), :class => 'btn btn-mini' %>
          <%= link_to raw(t('.destroy', :default => raw(t("helpers.links.destroy")))),
                      school_path(school),
                      :method => :delete,
                      :data => { :confirm => raw(t('.confirm', :default => raw(t("helpers.links.confirm", :default => 'Are you sure?')))) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to raw(t('.new', :default => raw(t("helpers.links.new")))),
            new_school_path,
            :class => 'btn btn-primary' %>
