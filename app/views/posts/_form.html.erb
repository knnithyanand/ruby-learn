<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Minimal'} } %>
  <%= f.button :submit %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
<% end %>
