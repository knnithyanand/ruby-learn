<%= simple_form_for @attachment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :file %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('views.cancel.both',
                      :default => t("helpers.links.cancel"))),
                posts_path,
                :class => 'btn' %>
  </div>
<% end %>
