<%= simple_form_for @course, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :code %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 4 } %>
  <%= f.input :type, collection: [ "Anual", "Semister", "Trimister"]  %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to raw(t('.cancel', :default => raw(t("helpers.links.cancel")))),
                courses_path, :class => 'btn' %>
  </div>
<% end %>
