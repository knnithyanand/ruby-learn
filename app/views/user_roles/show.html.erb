<%- model_class = UserRole -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user_role.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @user_role.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw(t('.back', :default => raw(t("helpers.links.back")))),
              user_roles_path, :class => 'btn'  %>
  <%= link_to raw(t('.edit', :default => raw(t("helpers.links.edit")))),
              edit_user_role_path(@user_role), :class => 'btn' %>
  <%= link_to raw(t('.destroy', :default => raw(t("helpers.links.destroy")))),
              user_role_path(@user_role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger pull-right' %>
</div>
